<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TextView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Ignore this notification for:"
	android:textSize="19dp"
	android:padding="20dp"
	/>
	<LinearLayout
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="center_horizontal">
		<Button
		android:layout_width="180dp"
		android:layout_height="wrap_content"
		android:id="@+id/ignore_oneDay"
		android:text="One Day"
		android:layout_margin="6dp"
		android:onClick="setInterval"
		/>
		<Button
		android:layout_width="180dp"
		android:layout_height="wrap_content"
		android:id="@+id/ignore_threeDays"
		android:text="Three Days"
		android:layout_margin="6dp"
		android:onClick="setInterval"
		/>
		<Button
		android:layout_width="180dp"
		android:layout_height="wrap_content"
		android:id="@+id/ignore_oneWeek"
		android:text="One Week"
		android:layout_margin="6dp"
		android:onClick="setInterval"
		/>
		<Button
		android:layout_width="180dp"
		android:layout_height="wrap_content"
		android:id="@+id/ignore_twoWeeks"
		android:text="Two Weeks"
		android:layout_margin="6dp"
		android:onClick="setInterval"
		/>
		<Button
		android:layout_width="180dp"
		android:layout_height="wrap_content"
		android:id="@+id/ignore_oneMonth"
		android:text="One Month"
		android:layout_margin="6dp"
		android:onClick="setInterval"
		/>
		<Button
		android:layout_width="180dp"
		android:layout_height="wrap_content"
		android:id="@+id/ignore_forever"
		android:text="Forever"
		android:layout_margin="6dp"
		android:onClick="setInterval"
		/>
	</LinearLayout>
</LinearLayout>